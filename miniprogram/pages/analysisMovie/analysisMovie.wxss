.remove-icon {
  background-color: #7b8076;
  height: 200rpx;
  text-align: center;
  width: 100%;
}
.icon-wrap {
  width: 60rpx;
  height: 60rpx;
  position: relative;
  left: 30rpx;
  background: white;
  border-radius: 0 0 40rpx 40rpx / 0 0 40rpx 40rpx;
}
.icon-wrap image {
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: 10rpx;
}
.remove-bg {
  width: 120rpx;
  height: 30rpx;
  margin-bottom: 30rpx;
  position: relative;
  left: calc(50% - 60rpx);
  background-color: white;
}
.icon-wrap::before {
  position: absolute;
  content: '';
  width: 30rpx;
  height: 30rpx;
  background-color: #7b8076;
  left: -30rpx;
  border-radius: 0 30rpx 0 0;
}
.icon-wrap::after {
  position: absolute;
  content: '';
  width: 30rpx;
  height: 30rpx;
  background-color: #7b8076;
  right: -30rpx;
  border-radius: 30rpx 0 0 0;
}

